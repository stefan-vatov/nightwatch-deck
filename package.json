{
  "name": "nightwatch-deck",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --host 127.0.0.1 --port 5173 --strictPort",
    "dev:app": "cross-env VITE_WS_BASE=http://127.0.0.1:8787 vite --host 127.0.0.1 --port 5173 --strictPort",
    "dev:worker": "wrangler dev --config wrangler.worker.toml --port 8787 functions/_worker.ts",
    "dev:stack": "npm-run-all --parallel dev:worker dev:app",
    "stack:stop": "bash ./scripts/stop-stack.sh",
    "worker:deploy": "wrangler deploy --config wrangler.worker.toml",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "pages:dev": "npm run build && wrangler pages dev dist --env-file .env.production",
    "pages:deploy": "npm run build && wrangler pages deploy dist --env-file .env.production"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.1.0",
    "@tailwindcss/vite": "^4.1.16",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.24",
    "lucide-react": "^0.548.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.0.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.16"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241112.0",
    "@eslint/js": "^9.36.0",
    "@types/node": "^24.9.1",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react-swc": "^4.1.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "npm-run-all": "^4.1.5",
    "tw-animate-css": "^1.4.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "^7.1.7",
    "wrangler": "^4.46.0"
  }
}
